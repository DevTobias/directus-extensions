{
  "name": "directus-extension-image-optimizer",
  "description": "Please enter a description for your extension",
  "icon": "extension",
  "version": "1.0.0",
  "license": "MIT",
  "directus:extension": {
    "type": "hook",
    "path": "dist/index.js",
    "source": "src/index.ts",
    "host": "^9.22.4"
  },
  "scripts": {
    "build": "esbuild src/index.ts --minify --external:sharp --bundle --platform=node --outfile=../../cms/extensions/hooks/image-optimizer/index.js --format=cjs",
    "build:dev": "esbuild src/index.ts --external:sharp --bundle --platform=node --outfile=../../cms/extensions/hooks/image-optimizer/index.js --format=cjs",
    "dev": "nodemon -w src -e ts -x \"yarn build\""
  },
  "devDependencies": {
    "@directus/extensions-sdk": "9.22.4",
    "@types/node": "^18.13.0",
    "esbuild": "^0.17.8",
    "imonizer": "^1.4.0",
    "nodemon": "^2.0.20",
    "typescript": "^4.9.5"
  }
}
